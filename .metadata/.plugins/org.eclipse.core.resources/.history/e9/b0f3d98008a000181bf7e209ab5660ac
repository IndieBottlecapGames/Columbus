package teste;

import java.sql.*;
import java.util.Date;
import java.util.Scanner;

public class main {

	public static void main(String[] args) {
		Scanner user_input = new Scanner(System.in);

		String fname = new String();
		String sname = new String();
		System.out.println("insert First Name");
		fname = user_input.next();
		System.out.println("Insert Surname");
		sname = user_input.next();
		System.out.println("Insert entering hour and exiting hour");
		System.out.println("Note: analogical clock");
		double enterhour = user_input.nextDouble();
		double exithour = user_input.nextDouble();
		double workingtime = exithour - enterhour;
		System.out.printf(sname + ", " + fname + " Has worked " + workingtime + "Hours");

	}

}
